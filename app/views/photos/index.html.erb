<div class="page-header">

    <!--Photos-->
    <a href="/photos/new" class="btn btn-lg btn-success"><i class="fa fa-plus" aria-hidden="true"></i></a>
    
  <p> <%= @user_id %> </p>
  

</div>


      <% @photos.each do |photo| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          
          <%= photo.user.username %>
          
        </h3>
      </div>
      <div class="panel-body">

      <tr>
        <td><%= photo.caption %></td>
        <td><img src="<%= photo.image %>" class="img-responsive"></td>
         
        <td> 
          ago  <br />
        </td>
        
<!--start of likes -->
          
    <td>
      
      
    </td>
    
    
<!--start of all comments-->
        
        <td>
          <% @comments.each do |comment| %>
            <% if comment.photo_id == photo.id %>
                <a href="/users/<%=comment.user.id%>"><%= comment.user.username %></a>
                <p> <%= comment.body %> </p>
            <% end %>
          <% end %>
          
        </td>
  
<!--start of comments form -->
        <td>
          
      <form action="/create_commentinphoto" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for photo_id -->
        <input type="hidden" id="photo_id" name="photo_id" class="form-control" value="<%= photo.id %>">
      </div>

      <!-- Label and input for body -->
      <div class="input-group">
                    <input type="text" id="body" name="body" class="form-control" placeholder="Add a comment..." required="">

                    <span class="input-group-btn">
                      <button class="btn btn-default" type="submit">
                        <i class="fa fa-commenting-o"></i>
                      </button>
                    </span>
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <input type="hidden" id="user_id" name="user_id" placeholder="<%= current_user.id %>" class="form-control" value="<%= current_user.id %>">
      </div>

      <button class="btn btn-success">
        Create Comment
      </button>

    </form>
        </td>          
<!--end comment form -->
    
    
        <td>
          <a href="/photos/<%= photo.id %>" class="btn btn-primary">Show</a>
          
        <% if photo.user_id == @user_id  %>

          <a href="/photos/<%= photo.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_photo/<%= photo.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
       
       <% end %>
       
        </td>
      </tr>
      </div>
      </div>
      
      <% end %>

